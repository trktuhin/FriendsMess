@model List<FriendsMess.Models.Meal>
@{
    ViewBag.Title = "Meals";
    var totalMeal = 0;
}

<h2 style="text-align: center;color: white">Meals of @ViewBag.member</h2>
@if (Model.Count > 0)
{
<div>
    <table class="table table-hover table-bordered">
        <thead>
        <tr class="danger">
            <th>Day</th>
            <th>Meal number</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var day in Model)
        {
            try
            {
                totalMeal += (int)day.MealNo;
            }
            catch (Exception e)
            {
                Console.WriteLine("There was some problem while converting meals into integer!");
            }
            <tr style="background-color:gainsboro">
                <td>@day.DayNoId</td>
                <td>@day.MealNo</td>
            </tr>
        }
            <tr style="background-color:greenyellow">
                <td style="text-align: right">Total:</td>
                <td style="font-weight: bold">@totalMeal</td>
            </tr>
        </tbody>
    </table>
</div>
    
}
else
{
    <div style="margin-top: 10%;" class=" jumbotron">
        <h3 style="color:red;">No meals yet !</h3>
    </div>
}
