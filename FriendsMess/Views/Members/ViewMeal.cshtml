@model List<FriendsMess.Models.Meal>
@{
    ViewBag.Title = "Meals";
    var totalMeal = 0;
}

<h2 style="text-align: center;color: white">Meals of @ViewBag.member</h2>
@if (Model.Count > 0)
{
<div>
    <table id="DetailedMeal" class="table table-hover table-bordered">
        <thead>
        <tr class="text-info">
            <th>Day</th>
            <th>Meal number</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var day in Model)
        {
            try
            {
                totalMeal += (int)day.MealNo;
            }
            catch (Exception e)
            {
                Console.WriteLine("There was some problem while converting meals into integer!");
            }
            <tr class="text-warning">
                <td>@day.DayNoId.ToLongDateString()</td>
                <td>@day.MealNo</td>
            </tr>
        }
            <tr>
                <td style="text-align: right">Total:</td>
                <td style="font-weight: bold">@totalMeal</td>
            </tr>
        </tbody>
    </table>
</div>

}
else
{
    <div style="margin-top: 7%;background: brown" class="jumbotron">
        <h3>No Meals yet !</h3>
    </div>
}
