@model FriendsMess.ViewModels.MemberViewModel
@{
    ViewBag.Title = "MemberForm";
}

<h2 style="text-align: center; margin-top: 10px;">@ViewBag.status</h2>
    
@if (ViewBag.status == "Edit Member")
{
    <div style="float: right">
        @Html.ActionLink("change Picture", "AddPicture", "Members", new{id=Model.Id}, new { @class = "btn btn-primary" })
        <br/><br/>
        @Html.ActionLink("Dlete Picture", "DeletePicture", "Members", new { id = Model.Id }, new { @class = "btn btn-danger" })
        <br /><br />
        @Html.ActionLink("Day", "AddAssignDay", "Members", new { id = Model.Id }, new { @class = "btn btn-default glyphicon glyphicon-plus" })
        <br/><br/>
        @Html.ActionLink(" Days", "ShowAssignDays", "Members", new { id = Model.Id }, new { @class = "btn btn-warning glyphicon glyphicon-eye-open",style="color:black" })
    </div>

    <div style="margin-bottom: 10px;"><img src="~/Images/@Model.ImagePath" onerror="this.onerror = null; this.src = '/Images/meal.jpg';" style=" border-radius:2%; border:1.8px solid white" width="150px;" height="150px;" /></div>
}
@using (Html.BeginForm("Save", "Members"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control md-textbox",placeholder="Enter name" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Deposit)
        @Html.TextBoxFor(m => m.Deposit, new { @class = "form-control md-textbox" })
        @Html.ValidationMessageFor(m => m.Deposit)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MobileNumber)
        @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control md-textbox", placeholder = "Enter mobile number" })
        @Html.ValidationMessageFor(m => m.MobileNumber)

    </div>
    
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button class="btn btn-primary" type="Submit">Save</button>
}
